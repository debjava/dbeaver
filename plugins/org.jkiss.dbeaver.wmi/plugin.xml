<plugin>

    <extension
        point="org.jkiss.dbeaver.dataSourceProvider">
        <datasource
              class="org.jkiss.dbeaver.ext.wmi.WMIDataSourceProvider"
              description="WMI connector"
              icon="icons/wmi_icon.png"
              id="wmi"
              label="WMI">
            <tree
                  icon="icons/wmi_icon.png"
                  label="WMI data source"
                  path="wmi">
                <folder type="org.jkiss.dbeaver.ext.wmi.model.WMIClass" label="Classes" description="WMI classes">
                    <items label="Classes" itemLabel="Class" path="allClass" property="allClasses" iconId="icons/class.png">
                        <folder type="org.jkiss.dbeaver.ext.wmi.model.WMIClassProperty" label="Properties" iconId="#columns" description="Class properties" navigable="false" id="ClassAttributes">
                            <items label="Properties" itemLabel="Property" path="property" property="columns"/>
                        </folder>
                    </items>
                </folder>
                <folder type="org.jkiss.dbeaver.ext.wmi.model.WMIContainer" label="Hierarchy" description="WMI namespace and class hierarchy">
                    <items label="Namespaces" itemLabel="Namespace" path="namespace" property="namespaces" icon="icons/namespace.png" id="Namespace">
                        <items ref="Namespace"/>
                        <items label="Classes" itemLabel="Class" path="class" property="classes" iconId="icons/class.png" id="Class" visibleIf="object.hasClasses()">
                            <items ref="ClassAttributes"/>
                            <items ref="Class"/>
                        </items>
                    </items>
                    <items ref="Class"/>
                </folder>
                <!--items label="Class" path="class" property="classes" iconId="icons/class.png" optional="true" recursive=".."/-->
            </tree>
            <drivers managable="false">
                <driver
                    id="wmi"
                    label="WMI"
                    icon="icons/wmi_icon.png"
                    description="WMI Native driver"
                    class="org.jkiss.dbeaver.ext.wmi.WMIDriver">
                    <file type="lib" os="win32" arch="x86" path="drivers/wmi/x86/jkiss_wmi.dll" url="http://dbeaver.jkiss.org/files/jdbc/drivers/wmi/x86/jkiss_wmi.dll"/>
                    <file type="lib" os="win32" arch="x86_64" path="drivers/wmi/x64/jkiss_wmi.dll" url="http://dbeaver.jkiss.org/files/jdbc/drivers/wmi/x64/jkiss_wmi.dll"/>
                </driver>
            </drivers>
            <views>
                <view
                    id="org.jkiss.dbeaver.ext.wmi.dataSourceWizardView"
                    targetID="org.jkiss.dbeaver.ext.ui.newConnectionWizard"
                    label="WMI Connection"
                    class="org.jkiss.dbeaver.ext.wmi.views.WMIConnectionPage"
                    icon="icons/wmi_icon.png">
                </view>
                <view
                    id="org.jkiss.dbeaver.ext.wmi.dataSourceEditorView"
                    targetID="org.jkiss.dbeaver.ext.ui.editConnectionDialog"
                    label="WMI Connection"
                    class="org.jkiss.dbeaver.ext.wmi.views.WMIConnectionPage"
                    icon="icons/wmi_icon.png">
                </view>
            </views>
        </datasource>
    </extension>

    <extension point="org.jkiss.dbeaver.databaseEditor">
        <manager
            class="org.jkiss.dbeaver.ext.wmi.edit.WMINamespaceManager"
            objectType="org.jkiss.dbeaver.ext.wmi.model.WMINamespace"
            label="Namespace manager"/>
    </extension>

    <extension point="org.jkiss.dbeaver.dataTypeProvider">
        <provider
            class="org.jkiss.dbeaver.ext.wmi.model.WMIValueHandlerProvider"
            id="org.jkiss.dbeaver.ext.wmi.model.WMIValueHandlerProvider"
            label="WMI data types provider">

            <datasource id="wmi"/>
            <type name="*"/>

        </provider>
    </extension>

</plugin>
